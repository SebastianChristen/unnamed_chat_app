<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="da_bbeest_aappp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:da_bbeest_aappp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Home" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Chats" Route="Chats" ContentTemplate="{DataTemplate local:Chats}" />
        <ShellContent Title="Groups" Route="Groups" ContentTemplate="{DataTemplate local:Groups}" />
        <ShellContent Title="Settings" Route="Settings" ContentTemplate="{DataTemplate local:Settings}" />
    </TabBar>
</Shell>
